{
  "name" : "handsomegyr/qywechat",
  "description" : "A simple PHP client library for qy weixin",
  "require" : {
    "php" : ">=5.5",
    "guzzlehttp/guzzle": "^6.2"
  },
  "require-dev" : {
    "phpunit/phpunit": "^7.4",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phpspec/phpspec": "^5.1",
    "squizlabs/php_codesniffer": "^3.3",
    "phpmd/phpmd": "^2.6",
    "phpab/phpab": "^0.1.0",
    "phploc/phploc": "^4.0",
    "pdepend/pdepend": "^2.5",
    "sebastian/phpcpd": "^4.1",
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "authors" : [ {
    "name" : "郭永荣",
    "email" : "handsomegyr@gmail.com",
    "homepage" : "http://github.com/handsomegyr/"
  } ],
  "keywords" : [ "weixin","qyweixin" ],
  "autoload" : {
    "psr-0" : {
      "Qyweixin" : "lib/"
    }
  },
  "license" : "MIT",
  "type" : "library",
  "homepage" : "http://github.com/handsomegyr/qywechat",
  "scripts": {
	"clean": "rm -rf composer.lock build/ vendor/ && mkdir build",
	"check": [
		"vendor/bin/parallel-lint . --exclude vendor",
		"vendor/bin/phploc --count-tests --log-csv build/phploc.csv --log-xml build/phploc.xml lib/Qyweixin tests/Qyweixin",		
		"vendor/bin/phpcpd --log-pmd build/pmd-cpd.xml lib/Qyweixin tests/Qyweixin",		
		"vendor/bin/pdepend --jdepend-xml=build/jdepend.xml --jdepend-chart=build/dependencies.svg --overview-pyramid=build/overview-pyramid.svg lib/Qyweixin",
		"vendor/bin/phpmd tests/Qyweixin xml phpmd.xml --reportfile build/pmd.xml",
		"vendor/bin/phpcs --report=checkstyle --standard=PSR2 --extensions=php --ignore=autoload.php --report-file=build/checkstyle.xml lib/Qyweixin tests/Qyweixin",
		"vendor/bin/phpcbf lib/Qyweixin --standard=PSR2",
		"vendor/bin/php-cs-fixer fix"
	],
	"test": [
		"vendor/bin/parallel-lint . --exclude vendor",		
		"vendor/bin/phpspec run",
		"vendor/bin/phpunit"
	],
	"test-coverage": [
		"vendor/bin/phpspec run -c phpspec.ci.yml",
		"vendor/bin/phpunit -v --coverage-text --coverage-clover=build/unit_coverage.xml"
	]
  }
}
